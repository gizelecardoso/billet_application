<div class="flex flex-col">
  <%= image_tag("logo.jpeg", class: "m-10") %>
  <div class="">
    <div class="mx-auto lg:max-w-5xl md:max-w-2xl sm:max-w-xl">
      <div class="space-y-6 rounded border-4 border-lime-200 p-10 text-lg text-white">
        <h2 class="flex justify-center font-bold text-2xl">Atualizar Boleto</h2>
        <%= form_with url: billet_payment_path, method: :patch, id: "billet_payment_update_form" do |form| %>
          <div class="mb-4">
            <%= form.label :amount, "Valor", class: "mb-2 block font-bold" %>
            <%= form.number_field :amount, value: @billet_payment["amount"] , class: "w-full rounded border border-lime-200 bg-black px-3 py-2 focus:border-2 focus:border-lime-300 focus:outline-none" %>
          </div>

          <div class="mb-4">
            <%= form.label :expire_at, "Expira em:", class: "mb-2 block font-bold" %>
            <%= form.number_field :expire_at, value: @billet_payment["expire_at"] , class: "w-full rounded border border-lime-200 bg-black px-3 py-2 focus:border-2 focus:border-lime-300 focus:outline-none" %>
          </div>

          <div class="flex items-center justify-center">
            <button class="rounded border-2 border-lime-200 px-4 py-2 font-bold text-white hover:bg-lime-200 focus:outline-none" type="submit" form="billet_payment_update_form">Atualizar Boleto</button>
          </div>
        <% end %>
     </div>
    </div>
  </div>
</div>
