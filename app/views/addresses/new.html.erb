<div class="flex flex-col">
  <img src="/img/logo.svg" class="m-10 h-10" alt="Tailwind Play" />
  <div class="">
    <div class="mx-auto lg:max-w-5xl md:max-w-2xl sm:max-w-xl">
      <div class="space-y-6 rounded border-4 border-lime-200 p-10 text-lg text-white">
        <h2 class="flex justify-center font-bold text-2xl">Endereço de Faturamento</h2>
        <%= form_with url: addresses_path(customer_id: @customer_id), method: :post, id: 'address_form' do |form| %>

          <div class="mb-4">
            <%= form.label :address, "Endereço", class: "mb-2 block font-bold" %>
            <%= form.text_field :address, class: "w-full rounded border border-lime-200 bg-black px-3 py-2 focus:border-2 focus:border-lime-300 focus:outline-none" %>
          </div>

          <div class="mb-4">
            <%= form.label :city, "Cidade", class: "mb-2 block font-bold" %>
            <%= form.text_field :city, class: "w-full rounded border border-lime-200 bg-black px-3 py-2 focus:border-2 focus:border-lime-300 focus:outline-none" %>
          </div>

          <div class="mb-4">
            <%= form.label :state, "Estado", class: "mb-2 block font-bold" %>
            <%= form.text_field :state, class: "w-full rounded border border-lime-200 bg-black px-3 py-2 focus:border-2 focus:border-lime-300 focus:outline-none" %>
          </div>

          <div class="mb-4">
            <%= form.label :zipcode, "Cep", class: "mb-2 block font-bold" %>
            <%= form.text_field :zipcode, class: "w-full rounded border border-lime-200 bg-black px-3 py-2 focus:border-2 focus:border-lime-300 focus:outline-none" %>
          </div>

          <div class="mb-4">
            <%= form.label :neighborhood, "Bairro", class: "mb-2 block font-bold" %>
            <%= form.text_field :neighborhood, class: "w-full rounded border border-lime-200 bg-black px-3 py-2 focus:border-2 focus:border-lime-300 focus:outline-none" %>
          </div>

          <div class="flex items-center justify-center">
            <button class="rounded border-2 border-lime-200 px-4 py-2 font-bold text-white hover:bg-lime-200 focus:outline-none" type="submit" form="address_form">Cadastrar Endereço</button>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
